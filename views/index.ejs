<script>
  $(document).ready(function() {
    $('#brojForm').on('submit', function(e) {
      e.preventDefault();

      $.ajax({
        type: 'POST',
        url: '',
        data: $(this).serialize(),
        dataType: 'json',
        success: function(response) {
          $('#rezervacijeContainer').html('');


          if (response.podaci && response.podaci.length > 0) {
            let table = `<table class="table table-dark table-hover">
                  <thead>
                    <tr>
                      <th>Broj rezervacije</th>
                      <th>Broj sobe</th>
                      <th>Datum dolaska</th>
                      <th>Datum odlaska</th>
                      <th>Ukupna cijena</th>
                    </tr>
                  </thead>
                  <tbody>`;
            response.podaci.forEach(item => {
              table += `<tr>
    <td>${item.idRezervacije}</td>
    <td>${item.brojSobe}</td>
    <td>${new Date(item.datumDolaska).toLocaleDateString('hr-HR')}</td>
    <td>${new Date(item.datumOdlaska).toLocaleDateString('hr-HR')}</td>
    <td>${item.ukupnaCijena}</td>
</tr>`;
            });
            table += `</tbody></table>`;
            $('#rezervacijeContainer').append(table);
          }
        },
        error: function (err) {
          console.log(err);
        }
      });
    });
  });
</script>

