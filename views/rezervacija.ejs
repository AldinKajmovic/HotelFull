</div>

<div class="container mt-5">
  <h2>Forma za rezervaciju</h2>
    <form method="post" action="/rezervacija/ok">
    <div class="form-group">
      <label for="selectOption">Izaberite sobu</label>
      <select class="form-control" name="soba" required>
        <% for (let i = 0; i < podaci.length; i++) { %>
        <option value="<%= podaci[i].brojSobe%>"><%= podaci[i].brojSobe%></option>
          <% } %>
      </select>
    </div>

    <div class="form-group">
      <label for="arrivalDate">Datum dolaska</label>
      <input type="date" class="form-control" name="datumDolaska" required>
    </div>

    <div class="form-group">
      <label for="departureDate">Datum odlaska</label>
      <input type="date" class="form-control" name="datumOdlaska" required>
    </div>

    <div class="form-group">
      <label>Broj gostiju</label>
      <input type="number" class="form-control" name="brojGostiju" min="1" required>
    </div>

    <button type="submit" class="btn btn-primary">Po≈°alji</button>
  </form>
</div>


